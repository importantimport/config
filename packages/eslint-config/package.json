{
  "name": "@importantimport/eslint-config",
  "type": "module",
  "version": "1.0.0-alpha.2",
  "description": "An ESLint Flat Config for !mportantImport.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/importantimport/config.git",
    "directory": "packages/eslint-config"
  },
  "bugs": "https://github.com/importantimport/config/issues",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "lint": "eslint . --flag unstable_ts_config",
    "lint:fix": "eslint . --flag unstable_ts_config --fix"
  },
  "peerDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "eslint": "^9.17.0"
  },
  "dependencies": {
    "defu": "^6.1.4",
    "eslint-flat-config-utils": "^0.4.0",
    "eslint-plugin-functional": "^7.2.0",
    "eslint-plugin-perfectionist": "^4.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.17.0"
  }
}
